<!--投稿一覧-->
<div class="container my-5">
  <%= render 'admin/header' %>

<div class="row mt-5">
  <h3>投稿一覧</h3>
</div>

<div class="row">
  <% @items.each do |item| %>

  <div class="col-3 mt-3">
    <%= link_to admin_item_path(item) do %>
      <%= image_tag item.get_image(300,300) %></br>
    <span>
      <%= item.name %>
      <% end %>
    </span>
  </div>
  <% end %>
</div>

<div class="container">
	<div class="row">
	 <div class="col-md-4 offset-md-4 py-2 mt-5">
	 	<%= paginate @items %>
	 </div>
	</div>
 </div>

</div>