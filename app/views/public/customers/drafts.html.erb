<div class="container">
  <%= render 'public/header' %>

  <div class="row mt-5">
    <div class="col-md-3">
      <div class= "row">
        <div class="col">
          <!--ユーザー名_部分テンプレート(_user)-->
          <%= render 'user', customer: @customer %>
        </div>
      </div>
      <div class= "row mt-3">
        <div class="col">
          <!--ユーザーがいいねした投稿一覧のリンク先-->
          <%= link_to "お気に入り", favorites_customer_path(@customer), class: "btn btn-info" %>
        </div>
      </div>
    </div>
        
  <!--下書き一覧-->
    <div class="col-md-9">
      <h4>下書き一覧</h4>
    
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>ペットの名前</th>
            <th>ペットの種類</th>
            <th>コメント件数</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td>
                  <%= link_to item_path(item) do %>
                    <%= image_tag item.get_image(150,150) %>
                  <% end %>
              </td>
              <td><%= item.name %></td>
              <td><%= item.category %></td>
              <td>
                <%= item.comments.count %>件</br>
                <%= item.favorites.count %> ♡いいね
              </td>
              <td><%= link_to "編集", edit_item_path(item), class:"btn btn-success btn-block" %></td>
            </tr>
          <% end %>
        </tbody>
       </table>
      </div>
    </div>
  </div>