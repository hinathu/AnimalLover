
<div class="container">
    <%= render 'public/header' %>
    
  <div class="row">
    <div class="col-md-3">
      <!--ユーザー名_部分テンプレート(_user)-->
      <%= render 'user', customer: @customer %>
    </div>

<!--登録者の投稿一覧-->
      <div class="col-md-8 offset-md-1">
        <h2>投稿一覧</h2>
      
        <table class="table">
          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td>
                    <%= link_to item_path(item) do %>
                      <%= image_tag item.get_image(300,300) %>
                    <% end %>
                </td>
                <td>
                  <%= item.name %>
                </td>
                <td>
                  <%= item.category %>
                </td>
              </tr>
            <% end %>
          </tbody>
         </table>
        </div>
      </div>
  </div>