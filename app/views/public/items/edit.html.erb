<div class="container">
  <%= render 'public/header' %>

<!--メッセージ-->
<div class="row d-flex justify-content-center">
  <% if flash[:item_updated_error] %>
    <span class="text-danger"><%= flash[:item_updated_error] %></span>
  <% end %>
</div>

<!--投稿編集画面-->

<div class="row mt-5">
  <h3>投稿編集</h3>
</div>

<%= form_with model: @item, url: item_path, method: :patch do |f| %>
<table class="table table-borderless">
  <tbody>
    <tr>
      <td width="200">投稿画像</td>
      <td width="300"><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
    </tr>
    <tr>
      <td>ペットの名前</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>ペットの種類</td>
      <td><%= f.text_field :category %></td>
    </tr>
    <tr>
      <td>本文</td>
      <td><%= f.text_area :body %></td>
    </tr>
    <tr>
      <td>ステータス</td>
      <td>
        <%= f.radio_button :is_draft, :true %> <span>公開</span>
        <%= f.radio_button :is_draft, :false %> <span>非公開</span>
      </td>
    </tr>
    <tr>
      <td></td>
      <td>
        <%= f.submit "更新する",  class:'btn btn-success' %>
      </td>
    </tr>
  </tbody>
</table>
<% end %>

</div>