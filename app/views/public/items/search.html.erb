<!--検索結果-->
<div class="container my-5">
  <%= render 'public/header' %>

<div class="mt-3">
  <h3>検索結果 "<%= @keyword %>"</h3>
</div>

<div class="row my-3">
  <div class="col-3">
    <%= link_to "新規投稿", new_item_path, class: "btn btn-success" %>
  </div>
  <div class="col-9">
    <!--検索機能-->
    <%= form_with url: search_items_path, local: true, method: :get do |f| %>
      <%= f.text_field :keyword %>
      <%= f.submit "検索" %>
      <%= link_to "クリア" , items_path, class: "btn btn-outline-secondary" %>
    <% end %>
  </div>
</div>

<!--投稿一覧_部分テンプレート(_item)-->
<div class="row">
  <%= render 'item', items: @items %>
</div>

<div class="container">
	<div class="row">
	 <div class="col-md-4 offset-md-4 py-2 mt-5">
	 	<%= paginate @items %>
	 </div>
	</div>
</div>

</div>